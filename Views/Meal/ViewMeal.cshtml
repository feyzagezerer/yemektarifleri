@using System.Globalization;
@model List<Meal>
<nav class="navbar navbar-fixed-top navbar-inverse" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/Home/Index">Yemek Tarifleri</a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li class="active"><a href="index.html">Ana Sayfa</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">Yemekler<i class="fa fa-angle-down"></i></a>
                    <ul class="dropdown-menu">
                        @foreach (var tc in (List<TopCategory>)ViewBag.TopCategories)
                        {
                            <li><a href="/Category/ViewCategory/@tc.Id">@tc.Ad</a></li>
                        }
                    </ul>
                </li>
                <li><a href="index.html">Hakkımızda</a></li>
                <li><a href="contact.html">İletişim</a></li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container -->
</nav>
<div class="section" id="recent-projects" style="position: relative;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-title">@ViewBag.Name</h2>
            </div>
            @foreach (var item in Model)
            {
                string imgSrc = item.Ad.ToLower(new CultureInfo("tr-TR", false)) + ".jpg";
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <a <a href="/MealDetail/ViewMealDetail/@item.Id" class="link-portfolio">
                        <div class="overlay-portfolio">
                            <h3>@item.Ad</h3>
                        </div>
                        <img class="img-responsive img-home-portfolio" src="/images/@imgSrc" alt="@item.Ad">
                    </a>
                </div>
            }
        </div><!-- /.row -->
    </div><!-- /.container -->
</div><!-- /.section -->
